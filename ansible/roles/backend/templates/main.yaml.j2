apiVersion: v1
kind: ConfigMap
metadata:
  name: "{{ backend_label }}-config"
  namespace: "{{ backend_namespace }}-{{ backend_environment }}"
  labels:
    app: "{{ backend_label }}"
data:
  DB_HOST: "{{ backend_db_host }}"
  DB_PORT: "{{ backend_db_port }}"
  DB_NAME: "{{ backend_db_name }}"

--- 

apiVersion: v1
kind: Secret
metadata:
  name: "{{ backend_label }}-secret"
  namespace: "{{ backend_namespace }}-{{ backend_environment }}"
  labels:
    app: "{{ backend_label }}"
type: Opaque
stringData:
  DB_USERNAME: "{{ backend_db_username }}"
  DB_PASSWORD: "{{ backend_db_password }}"

--- 

apiVersion: v1
kind: Service
metadata:
  name: "{{ backend_label }}-svc"
  namespace: "{{ backend_namespace }}-{{ backend_environment }}"
  labels:
    app: "{{ backend_label }}"
  annotations:
    description: "Backend Service"
spec:
  selector:
    app: "{{ backend_label }}"
  ports:
  - port: 80
    targetPort: 3000
    protocol: TCP
    name: http
  type: ClusterIP

---

apiVersion: apps/v1
kind: Deployment
metadata:
  name: "{{ backend_label }}-deployment"
  namespace: "{{ backend_namespace }}-{{ backend_environment }}"
  labels:
    app: "{{ backend_label }}"
  annotations:
    description: "Backend deployment"
spec:
  replicas: 1
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 0
  selector:
    matchLabels:
      app: "{{ backend_label }}"
  template:
    metadata:
      labels:
        app: "{{ backend_label }}"    
    spec:
      nodeSelector:
        cloud.google.com/gke-nodepool: "{{ backend_app_node }}"
      tolerations:
      - key: "workload"
        operator: "Equal"
        value: "app"
        effect: "NoSchedule"
      containers:
      - name: "{{ backend_label }}" 
        image: "{{ backend_image }}"
        imagePullPolicy: IfNotPresent
        ports:
        - containerPort: 3000
          name: http
        env:
        - name: DB_HOST
          valueFrom:
            configMapKeyRef:
              name: "{{ backend_label }}-config"
              key: DB_HOST
        - name: DB_PORT
          valueFrom:
            configMapKeyRef:
              name: "{{ backend_label }}-config"
              key: DB_PORT
        - name: DB_NAME
          valueFrom:
            configMapKeyRef:
              name: "{{ backend_label }}-config"
              key: DB_NAME
        - name: DB_USERNAME
          valueFrom:
            secretKeyRef:
              name: "{{ backend_label }}-secret"
              key: DB_USERNAME
        - name: DB_PASSWORD
          valueFrom:
            secretKeyRef:
              name: "{{ backend_label }}-secret"
              key: DB_PASSWORD
        resources:
          limits:
            cpu: "1"
            memory: "1Gi"
          requests:
            cpu: "250m"
            memory: "512Mi"
        livenessProbe:
          httpGet:
            path: /
            port: http
          initialDelaySeconds: 30
          periodSeconds: 10
        readinessProbe:
          httpGet:
            path: /
            port: http
          initialDelaySeconds: 30
          periodSeconds: 10
